<application>
  <component name="ActionMacroManager">
    <macro name="addCommaAtEndOfLine">
      <action id="EditorLineEnd" />
      <typing text-keycode="44:0">,</typing>
    </macro>
    <macro name="pad with spaces">
      <typing text-keycode="32:0;32:0">&amp;#x20;&amp;#x20;</typing>
      <action id="EditorLeft" />
    </macro>
  </component>
</application>